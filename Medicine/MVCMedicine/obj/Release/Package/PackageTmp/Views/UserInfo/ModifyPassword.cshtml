                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit="" onclick="onclick()" lay-filter="form_add">立即修改</button>
                </div>
            </div>
            <script>
                function onclick() {
                    if ($('#NewPassword').val() != $('#Password').val()) {
                        alert('密码输入不一致，请重新输入...');
